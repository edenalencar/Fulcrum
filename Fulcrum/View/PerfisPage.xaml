<Page
    x:Class="Fulcrum.View.PerfisPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fulcrum.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bu="using:Fulcrum.Bu"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:DateFormatConverter x:Key="DateFormatConverter"/>
        
        <!-- Conversor para visibilidade do indicador de perfil ativo -->
        <local:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Perfis de Sons" Style="{StaticResource TitleTextBlockStyle}" FontSize="28" Margin="0,0,0,8"/>
            <TextBlock Text="Crie, gerencie e aplique configurações personalizadas de sons" Style="{StaticResource BodyTextBlockStyle}" 
                     Opacity="0.7" TextWrapping="Wrap"/>
            <InfoBar x:Name="infoBar" IsOpen="False" Severity="Success" Margin="0,10,0,0"/>
            
            <!-- Indicador de perfil ativo -->
            <Grid x:Name="perfilAtivoIndicador" Margin="0,10,0,0" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xE930;" Foreground="{ThemeResource SystemAccentColor}" Margin="0,0,8,0"/>
                <TextBlock x:Name="txtPerfilAtivo" Grid.Column="1" Text="Nenhum perfil ativo"
                           Foreground="{ThemeResource SystemAccentColor}" FontWeight="SemiBold"/>
            </Grid>
        </StackPanel>

        <!-- Conteúdo principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista de perfis -->
            <ListView x:Name="perfisList" 
                      ItemsSource="{x:Bind _perfisCollection}" 
                      SelectionMode="Single"
                      SelectionChanged="PerfisList_SelectionChanged"
                      BorderThickness="1"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      CornerRadius="8"
                      Padding="4">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="bu:PerfilSom">
                        <Grid Padding="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="{x:Bind Nome}" 
                                       Grid.Row="0"
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       Margin="0,0,0,4"/>
                                       
                            <!-- Indicador visual de perfil ativo -->
                            <Border Grid.Row="0" Grid.Column="1" 
                                    Background="{ThemeResource SystemAccentColor}" 
                                    Padding="6,2" CornerRadius="10" 
                                    Margin="8,0,0,0"
                                    x:Name="ativoIndicador"
                                    Visibility="Collapsed">
                                <TextBlock Text="ATIVO" 
                                           Foreground="White" 
                                           FontSize="10" 
                                           FontWeight="SemiBold"/>
                            </Border>
                            
                            <TextBlock Text="{x:Bind Descricao}" 
                                       Grid.Row="1" Grid.ColumnSpan="2"
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       TextWrapping="Wrap" 
                                       Opacity="0.7"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{x:Bind DataCriacao, Converter={StaticResource DateFormatConverter}}" 
                                       Grid.Row="2" Grid.ColumnSpan="2"
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       Opacity="0.5"
                                       FontSize="10"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="8">
                            <TextBlock Text="Seus Perfis" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
            </ListView>

            <!-- Separador -->
            <Rectangle Grid.Column="1" Width="1" Margin="12,0" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.5"/>

            <!-- Área de detalhes do perfil -->
            <Grid Grid.Column="2" Padding="12,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Cabeçalho da área de detalhes -->
                <TextBlock Text="Detalhes do Perfil" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>

                <!-- Conteúdo dos detalhes -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <InfoBar x:Name="infoBarPerfil" 
                                 Title="Selecione um perfil" 
                                 Message="Selecione um perfil na lista à esquerda para ver seus detalhes." 
                                 IsOpen="True" 
                                 Severity="Informational" 
                                 IsClosable="False"/>

                        <TextBlock Text="Configurações de Som" 
                                    Style="{StaticResource SubtitleTextBlockStyle}" 
                                    Margin="0,20,0,8"
                                    Visibility="{x:Bind perfisList.SelectedItem, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>

                        <!-- Simplificado temporariamente para evitar erro WMC1006 -->
                        <TextBlock x:Name="txtConfiguracoesInfo" 
                                  Text="Selecione um perfil para ver as configurações de som"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Botões de ação -->
        <CommandBar Grid.Row="2" Background="Transparent" DefaultLabelPosition="Right" Margin="0,12,0,0">
            <AppBarButton x:Name="btnNovoPerfil" Icon="Add" Label="Novo Perfil" Click="BtnNovoPerfil_Click"/>
            <AppBarButton x:Name="btnAplicarPerfil" Icon="Play" Label="Aplicar Perfil" Click="BtnAplicarPerfil_Click" IsEnabled="False"/>
            <AppBarButton x:Name="btnRemoverPerfil" Icon="Delete" Label="Remover Perfil" Click="BtnRemoverPerfil_Click" IsEnabled="False"/>
        </CommandBar>
    </Grid>
</Page>