<Page
    x:Class="Fulcrum.View.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fulcrum.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Gradiente aprimorado para o cabeçalho com efeito mais profundo -->
        <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{ThemeResource SystemAccentColorDark3}" Offset="0.0"/>
            <GradientStop Color="{ThemeResource SystemAccentColorDark2}" Offset="0.4"/>
            <GradientStop Color="{ThemeResource SystemAccentColorDark1}" Offset="0.7"/>
            <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="1.0"/>
        </LinearGradientBrush>
        
        <!-- Gradiente alternativo para elementos destacados -->
        <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="0.0"/>
            <GradientStop Color="{ThemeResource SystemAccentColorLight1}" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Efeito de vidro (Glassmorphism) para cartões premium - removendo propriedades não suportadas -->
        <Style x:Key="GlassmorphismCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="12,24,12,0"/>
            <!-- Animações aprimoradas -->
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.6" Delay="0:0:0.05"/>
                        <animations:TranslationAnimation From="0,40,0" To="0,0,0" Duration="0:0:0.8" Delay="0:0:0.05"/>
                        <animations:ScaleAnimation From="0.95,0.95,1" To="1,1,1" Duration="0:0:0.7" Delay="0:0:0.1"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para cartões flutuantes - usando abordagem compatível com WinUI 3 -->
        <Style x:Key="FloatingCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="12,20,12,0"/>
            <!-- Removendo a propriedade Translation que causava o erro -->
            <!-- Animações sutis -->
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.5" Delay="0:0:0.1"/>
                        <animations:ScaleAnimation From="0.96,0.96,1" To="1,1,1" Duration="0:0:0.6" Delay="0:0:0.1"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para títulos de seção modernos -->
        <Style x:Key="ModernSectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Margin" Value="0,12,0,40"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemAccentColor}"/>
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.4"/>
                        <animations:TranslationAnimation From="-20,0,0" To="0,0,0" Duration="0:0:0.5"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para botões de ação avançados -->
        <Style x:Key="PremiumButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ControlFillColorSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="28,16"/>
            <Setter Property="CornerRadius" Value="28"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform" 
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.03" Duration="0:0:0.3" EasingFunction="{StaticResource CircleEase}"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform" 
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.03" Duration="0:0:0.3" EasingFunction="{StaticResource CircleEase}"/>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" 
                                                                         Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ControlFillColorTertiaryBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetName="ContentPresenterTransform"
                                                           Storyboard.TargetProperty="Y"
                                                           To="-2" Duration="0:0:0.3" EasingFunction="{StaticResource CircleEase}"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform" 
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="0.97" Duration="0:0:0.15" EasingFunction="{StaticResource CircleEase}"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform" 
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="0.97" Duration="0:0:0.15" EasingFunction="{StaticResource CircleEase}"/>
                                            <DoubleAnimation Storyboard.TargetName="ContentPresenterTransform"
                                                           Storyboard.TargetProperty="Y"
                                                           To="1" Duration="0:0:0.15" EasingFunction="{StaticResource CircleEase}"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter"
                                            Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            Padding="{TemplateBinding Padding}"
                                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                            AutomationProperties.AccessibilityView="Raw"
                                            CornerRadius="{TemplateBinding CornerRadius}">
                                <ContentPresenter.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" />
                                        <TranslateTransform x:Name="ContentPresenterTransform" X="0" Y="0" />
                                    </TransformGroup>
                                </ContentPresenter.RenderTransform>
                                <ContentPresenter.Shadow>
                                    <ThemeShadow />
                                </ContentPresenter.Shadow>
                            </ContentPresenter>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para cartões de tecnologia aprimorado - removendo animações hover não suportadas -->
        <Style x:Key="FeatureCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource SolidBackgroundFillColorBaseBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorSecondaryBrush}"/>
            <Setter Property="Padding" Value="28,24"/>
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.4" Delay="0:0:0.1"/>
                        <animations:ScaleAnimation From="0.9,0.9,1" To="1,1,1" Duration="0:0:0.5" Delay="0:0:0.1"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para destaque tecnológico - removendo propriedades não suportadas -->
        <Style x:Key="TechHighlightStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="40,36"/>
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.5" Delay="0:0:0.2"/>
                        <animations:ScaleAnimation From="0.95,0.95,1" To="1,1,1" Duration="0:0:0.6" Delay="0:0:0.2"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Easing Functions para animações mais suaves -->
        <CircleEase x:Key="CircleEase" EasingMode="EaseOut"/>
        <QuinticEase x:Key="QuinticEase" EasingMode="EaseOut"/>
        
        <!-- Adicionando animação de FadeIn para uso direto -->
        <animations:ImplicitAnimationSet x:Key="FadeInAnimation">
            <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.5"/>
        </animations:ImplicitAnimationSet>
    </Page.Resources>

    <ScrollViewer Padding="0" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Cabeçalho elegante com elementos visuais modernos -->
            <Grid Grid.Row="0" Height="480">
                <!-- Fundo com gradiente aprimorado -->
                <Grid Background="{StaticResource HeaderGradientBrush}">
                    <!-- Camada com padrões de som estilizados -->
                    <Canvas>
                        <!-- Animação de ondas sonoras -->
                        <Path Fill="White" Opacity="0.03" Data="M0,260 C80,220 160,300 240,260 C320,220 400,300 480,260 C560,220 640,300 720,260 C800,220 880,300 960,260 L960,480 L0,480 Z"/>
                        <Path Fill="White" Opacity="0.05" Data="M0,300 C70,250 140,340 210,300 C280,260 350,340 420,300 C490,260 560,340 630,300 C700,260 770,340 840,300 C910,260 980,340 1050,300 L1050,480 L0,480 Z"/>
                        
                        <!-- Ondas sonoras como linhas estilizadas -->
                        <Path Stroke="White" StrokeThickness="2" Opacity="0.1" StrokeDashArray="1,3" 
                              Data="M -100,220 Q 20,170 140,220 Q 260,270 380,220 Q 500,170 620,220 Q 740,270 860,220 Q 980,170 1100,220" Canvas.Top="40"/>
                        <Path Stroke="White" StrokeThickness="1.5" Opacity="0.07" StrokeDashArray="5,2" 
                              Data="M -120,250 Q 30,180 180,250 Q 330,320 480,250 Q 630,180 780,250 Q 930,320 1080,250" Canvas.Top="20"/>
                        <Path Stroke="White" StrokeThickness="1" Opacity="0.05" StrokeDashArray="2,2" 
                              Data="M -80,280 Q 50,200 180,280 Q 310,360 440,280 Q 570,200 700,280 Q 830,360 960,280" Canvas.Top="10"/>
                        
                        <!-- Elementos decorativos animados -->
                        <Ellipse Fill="White" Opacity="0.2" Width="10" Height="10" Canvas.Left="120" Canvas.Top="140">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Particle1" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetName="Particle1" Storyboard.TargetProperty="Y"
                                                             From="0" To="20" Duration="0:0:3" EasingFunction="{StaticResource CircleEase}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        
                        <Ellipse Fill="White" Opacity="0.15" Width="18" Height="18" Canvas.Left="540" Canvas.Top="200">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Particle2" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetName="Particle2" Storyboard.TargetProperty="Y"
                                                             From="0" To="-25" Duration="0:0:4" EasingFunction="{StaticResource CircleEase}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        
                        <Ellipse Fill="White" Opacity="0.1" Width="15" Height="15" Canvas.Left="300" Canvas.Top="100">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Particle3" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetName="Particle3" Storyboard.TargetProperty="Y"
                                                             From="0" To="15" Duration="0:0:5" EasingFunction="{StaticResource CircleEase}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        
                        <Ellipse Fill="White" Opacity="0.08" Width="24" Height="24" Canvas.Left="720" Canvas.Top="120">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="Particle4" Y="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetName="Particle4" Storyboard.TargetProperty="Y"
                                                             From="0" To="-18" Duration="0:0:3.5" EasingFunction="{StaticResource CircleEase}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Canvas>
                                
                    <!-- Conteúdo do cabeçalho com animação aprimorada -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,50,0,0">
                        <!-- Logo com efeito de pulsação -->
                        <Grid>
                            <Ellipse Width="180" Height="180" Fill="{ThemeResource SystemAccentColorLight1}" Opacity="0.15"
                                   Margin="0,0,0,5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="LogoBackgroundPulse" ScaleX="1" ScaleY="1"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger>
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                <DoubleAnimation Storyboard.TargetName="LogoBackgroundPulse" 
                                                               Storyboard.TargetProperty="ScaleX"
                                                               From="1" To="1.07" Duration="0:0:3" EasingFunction="{StaticResource QuinticEase}"/>
                                                <DoubleAnimation Storyboard.TargetName="LogoBackgroundPulse" 
                                                               Storyboard.TargetProperty="ScaleY"
                                                               From="1" To="1.07" Duration="0:0:3" EasingFunction="{StaticResource QuinticEase}"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <Image Source="/Assets/StoreLogo.png" Width="150" Height="150" Margin="0,0,0,5"/>
                        </Grid>
                        
                        <!-- Título principal com animação de fade-in -->
                        <TextBlock x:Name="txtAboutTitle" x:Uid="AboutPageTitle"
                           Style="{ThemeResource TitleLargeTextBlockStyle}" 
                           FontWeight="SemiBold"
                           Margin="0,10,0,0"
                           AutomationProperties.HeadingLevel="Level1"/>
                        
                        <!-- Informação da versão -->
                        <TextBlock x:Name="txtVersion" x:Uid="AboutVersion" 
                                 Style="{StaticResource CaptionTextBlockStyle}" 
                                 HorizontalAlignment="Center" Foreground="White" Opacity="0.8" Margin="0,8,0,0"/>
                        
                        <!-- Descrição elegante -->
                        <TextBlock x:Uid="AboutDescription" 
                                 Style="{StaticResource BodyTextBlockStyle}" 
                                 HorizontalAlignment="Center" Foreground="White" Opacity="0.9" Margin="0,20,0,0"
                                 FontSize="18" CharacterSpacing="20"/>
                        
                        <!-- Indicador de scroll -->
                        <Grid Margin="0,50,0,0" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE972;" FontSize="24" Foreground="White" Opacity="0.6">
                                <FontIcon.RenderTransform>
                                    <TranslateTransform x:Name="ScrollIndicator" Y="0"/>
                                </FontIcon.RenderTransform>
                                <FontIcon.Triggers>
                                    <EventTrigger>
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                <DoubleAnimation Storyboard.TargetName="ScrollIndicator" 
                                                               Storyboard.TargetProperty="Y"
                                                               From="0" To="10" Duration="0:0:1.5" EasingFunction="{StaticResource CircleEase}"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </FontIcon.Triggers>
                            </FontIcon>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
            
            <!-- Conteúdo principal com layout aprimorado -->
            <Grid Grid.Row="1">
                <StackPanel MaxWidth="900" HorizontalAlignment="Center" Margin="24,0,24,80">
                    <!-- Descrição do aplicativo com efeito simplificado -->
                    <Border Style="{StaticResource GlassmorphismCardStyle}" Margin="0,-80,0,24" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Opacity="0.95">
                        <!-- Usando ThemeShadow para criar efeito de elevação em vez de Vector3 -->
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <Grid>
                            <Border CornerRadius="24" Margin="-1" Opacity="0.05" 
                                    Background="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                            
                            <StackPanel>
                                <TextBlock x:Uid="AboutAbout" Style="{StaticResource ModernSectionTitleStyle}" Margin="15,4,15,32"/>
                                
                                <TextBlock x:Uid="AboutIntroP1" TextWrapping="Wrap" Style="{StaticResource BodyTextBlockStyle}" Margin="15,0,15,20" LineHeight="26" FontSize="15"/>
                                <TextBlock x:Uid="AboutIntroP2" TextWrapping="Wrap" Style="{StaticResource BodyTextBlockStyle}" Margin="15,0,15,40" LineHeight="26" FontSize="15"/>
                                
                                <!-- Recursos principais em grid de destaque -->
                                <TextBlock x:Uid="PremiumResourcesTitle" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="SemiBold" FontSize="22" Margin="15,8,15,24"/>
                                
                                <!-- Substituindo o ItemsControl por um Grid explícito para melhorar a visibilidade -->
                                <Grid Margin="15,0,15,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Item 1 - Mixer -->
                                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource FeatureCardStyle}" Margin="0,0,8,16">
                                        <Grid>
                                            <Border Width="52" Height="52" CornerRadius="16" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,16,12">
                                                <TextBlock Text="&#xE7F3;" FontFamily="Segoe Fluent Icons" FontSize="24" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Border>
                                            <StackPanel Margin="68,0,0,0">
                                                <TextBlock x:Uid="MixerTitle" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                <TextBlock x:Uid="MixerDescription" 
                                                         Opacity="0.7" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Item 2 - Timer -->
                                    <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource FeatureCardStyle}" Margin="8,0,0,16">
                                        <Grid>
                                            <Border Width="52" Height="52" CornerRadius="16" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,16,12">
                                                <TextBlock Text="&#xE916;" FontFamily="Segoe Fluent Icons" FontSize="24" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Border>
                                            <StackPanel Margin="68,0,0,0">
                                                <TextBlock x:Uid="TimerTitle" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                <TextBlock x:Uid="TimerDescription" 
                                                         Opacity="0.7" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Item 3 - Visualização -->
                                    <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource FeatureCardStyle}" Margin="0,0,8,16">
                                        <Grid>
                                            <Border Width="52" Height="52" CornerRadius="16" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,16,12">
                                                <TextBlock Text="&#xEB1A;" FontFamily="Segoe Fluent Icons" FontSize="24" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Border>
                                            <StackPanel Margin="68,0,0,0">
                                                <TextBlock x:Uid="WaveVisTitle" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                <TextBlock x:Uid="WaveVisDescription" 
                                                         Opacity="0.7" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Item 4 - Perfis -->
                                    <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource FeatureCardStyle}" Margin="8,0,0,16">
                                        <Grid>
                                            <Border Width="52" Height="52" CornerRadius="16" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,16,12">
                                                <TextBlock Text="&#xE179;" FontFamily="Segoe Fluent Icons" FontSize="24" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Border>
                                            <StackPanel Margin="68,0,0,0">
                                                <TextBlock x:Uid="ProfilesTitle" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                <TextBlock x:Uid="ProfilesDescription" 
                                                         Opacity="0.7" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Item 5 - Equalização -->
                                    <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource FeatureCardStyle}" Margin="0,0,8,16">
                                        <Grid>
                                            <Border Width="52" Height="52" CornerRadius="16" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,16,12">
                                                <TextBlock Text="&#xE9E9;" FontFamily="Segoe Fluent Icons" FontSize="24" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Border>
                                            <StackPanel Margin="68,0,0,0">
                                                <TextBlock x:Uid="EqualizationTitle" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                <TextBlock x:Uid="EqualizationDescription" 
                                                         Opacity="0.7" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Item 6 - Design -->
                                    <Border Grid.Column="1" Grid.Row="2" Style="{StaticResource FeatureCardStyle}" Margin="8,0,0,16">
                                        <Grid>
                                            <Border Width="52" Height="52" CornerRadius="16" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,16,12">
                                                <TextBlock Text="&#xE77C;" FontFamily="Segoe Fluent Icons" FontSize="24" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Border>
                                            <StackPanel Margin="68,0,0,0">
                                                <TextBlock x:Uid="DesignTitle" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                <TextBlock x:Uid="DesignDescription" 
                                                         Opacity="0.7" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Item 7 - DSP Avançado -->
                                    <Border Grid.Column="0" Grid.Row="3" Style="{StaticResource FeatureCardStyle}" Margin="0,0,8,0">
                                        <Grid>
                                            <Border Width="52" Height="52" CornerRadius="16" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,16,12">
                                                <TextBlock Text="&#xE9D9;" FontFamily="Segoe Fluent Icons" FontSize="24" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Border>
                                            <StackPanel Margin="68,0,0,0">
                                                <TextBlock x:Uid="DspTitle" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                <TextBlock x:Uid="DspDescription" 
                                                         Opacity="0.7" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Item 8 - Masterização -->
                                    <Border Grid.Column="1" Grid.Row="3" Style="{StaticResource FeatureCardStyle}" Margin="8,0,0,0">
                                        <Grid>
                                            <Border Width="52" Height="52" CornerRadius="16" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,16,12">
                                                <TextBlock Text="&#xE819;" FontFamily="Segoe Fluent Icons" FontSize="24" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Border>
                                            <StackPanel Margin="68,0,0,0">
                                                <TextBlock x:Uid="MasteringTitle" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                <TextBlock x:Uid="MasteringDescription" 
                                                         Opacity="0.7" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Links e recursos com design clean e minimalista -->
                    <Border Style="{StaticResource FloatingCardStyle}" Margin="0,24,0,0">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <Grid>
                            <Border CornerRadius="20" Margin="-1" Opacity="0.05" 
                                    Background="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                            
                            <StackPanel>
                                <!-- Título da seção com refinamento sutil -->
                                <TextBlock x:Uid="CommunityAndSupportTitle" Style="{StaticResource ModernSectionTitleStyle}" Margin="15,12,15,16">
                                    <animations:Implicit.ShowAnimations>
                                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.5"/>
                                    </animations:Implicit.ShowAnimations>
                                </TextBlock>
                                
                                <!-- Linha decorativa simples -->
                                <Rectangle Height="2" Margin="20,0,20,20" RadiusX="1" RadiusY="1"
                                           Fill="{ThemeResource SystemAccentColor}">
                                    <animations:Implicit.ShowAnimations>
                                        <animations:ScaleAnimation From="0,1,1" To="1,1,1" Duration="0:0:0.6"/>
                                    </animations:Implicit.ShowAnimations>
                                </Rectangle>
                                
                                <!-- Substituindo por uma lista de HyperlinkButtons com ícones simples -->
                                <StackPanel Margin="15,8,15,16" Spacing="14">
                                    
                                    <!-- Botão Código Fonte: HyperlinkButton estilizado -->
                                    <HyperlinkButton x:Name="BtnSourceCode"
                                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                                  BorderThickness="1"
                                                  Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                  CornerRadius="4"
                                                  Padding="14,10" 
                                                  HorizontalAlignment="Stretch"
                                                  HorizontalContentAlignment="Left"
                                                  Click="BtnSourceCode_Click"
                                                  AutomationProperties.Name="Ver código no GitHub"
                                                  ToolTipService.ToolTip="Visite o repositório no GitHub">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <SymbolIcon Symbol="Globe" Grid.Column="0" Margin="0,0,12,0"
                                                      Foreground="{ThemeResource SystemAccentColor}"/>
                                            
                                            <TextBlock Grid.Column="1" x:Uid="SourceCodeTitle" 
                                                     FontWeight="SemiBold" 
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </HyperlinkButton>
                                    
                                    <!-- Botão Reportar Problema: HyperlinkButton estilizado -->
                                    <HyperlinkButton x:Name="BtnReportIssue"
                                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                                  BorderThickness="1"
                                                  Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                  CornerRadius="4"
                                                  Padding="14,10"
                                                  HorizontalAlignment="Stretch"
                                                  HorizontalContentAlignment="Left"
                                                  Click="BtnReportIssue_Click"
                                                  AutomationProperties.Name="Relatar problema no GitHub"
                                                  ToolTipService.ToolTip="Reportar um bug ou sugerir melhorias">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <SymbolIcon Symbol="ReportHacked" Grid.Column="0" Margin="0,0,12,0" 
                                                      Foreground="{ThemeResource SystemAccentColor}"/>
                                            
                                            <TextBlock Grid.Column="1" x:Uid="ReportIssueTitle" 
                                                     FontWeight="SemiBold" 
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </HyperlinkButton>
                                    
                                    <!-- Botão Contato: HyperlinkButton estilizado -->
                                    <HyperlinkButton x:Name="BtnContactDeveloper"
                                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                                  BorderThickness="1"
                                                  Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                  CornerRadius="4"
                                                  Padding="14,10"
                                                  HorizontalAlignment="Stretch"
                                                  HorizontalContentAlignment="Left"
                                                  Click="BtnContactDeveloper_Click"
                                                  AutomationProperties.Name="Entre em contato com o suporte"
                                                  ToolTipService.ToolTip="Enviar email à equipe de suporte">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <SymbolIcon Symbol="Mail" Grid.Column="0" Margin="0,0,12,0" 
                                                      Foreground="#0078D4"/>
                                            
                                            <TextBlock Grid.Column="1" x:Uid="ContactTitle" 
                                                     FontWeight="SemiBold" 
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </HyperlinkButton>
                                    
                                    <!-- Botão Avaliar: HyperlinkButton estilizado -->
                                    <HyperlinkButton x:Name="BtnRateApp"
                                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                                  BorderThickness="1"
                                                  Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                  CornerRadius="4"
                                                  Padding="14,10"
                                                  HorizontalAlignment="Stretch"
                                                  HorizontalContentAlignment="Left"
                                                  Click="BtnRateApp_Click"
                                                  AutomationProperties.Name="Avaliar na Microsoft Store"
                                                  ToolTipService.ToolTip="Avaliar o Fulcrum na Microsoft Store">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <SymbolIcon Symbol="Favorite" Grid.Column="0" Margin="0,0,12,0"
                                                      Foreground="#FF8C00"/>
                                            
                                            <TextBlock Grid.Column="1" x:Uid="RateAppTitle" 
                                                     FontWeight="SemiBold" 
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </HyperlinkButton>
                                    
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Informações técnicas com visuais aprimorados -->
                    <Border Style="{StaticResource FloatingCardStyle}" Margin="0,24,0,0">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <Grid>
                            <Border CornerRadius="20" Margin="-1" Opacity="0.05" 
                                    Background="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                            
                            <StackPanel>
                                <TextBlock x:Uid="AdvancedTechTitle" Style="{StaticResource ModernSectionTitleStyle}" Margin="15,8,15,28"/>
                                <TextBlock x:Uid="AdvancedTechDescription" TextWrapping="Wrap" Style="{StaticResource BodyTextBlockStyle}" Margin="15,0,15,40" LineHeight="26" FontSize="15"/>
                                
                                <!-- Substituindo o ItemsControl por Grid explícito para garantir visualização -->
                                <Grid Margin="15,0,15,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Windows App SDK -->
                                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource TechHighlightStyle}" 
                                           Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                           BorderThickness="1" BorderBrush="{ThemeResource ControlStrokeColorSecondaryBrush}"
                                           Margin="0,0,12,20" MinHeight="200" Padding="28,30">
                                        <StackPanel>
                                            <Grid>
                                                <Ellipse Width="80" Height="80" Fill="{ThemeResource SystemAccentColorLight3}" Opacity="0.2"/>                                                
                                                
                                                <TextBlock Text="&#xE950;" FontFamily="Segoe Fluent Icons" FontSize="42" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                         Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Grid>
                                            <TextBlock x:Uid="WinAppSdkTitle" FontWeight="SemiBold" FontSize="20" Foreground="{ThemeResource SystemBaseHighColor}" Margin="0,16,0,14"/>
                                            <TextBlock x:Uid="WinAppSdkDescription" 
                                                     Opacity="0.7" TextWrapping="Wrap" Margin="0,12,0,0" LineHeight="24"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- .NET 8 -->
                                    <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource TechHighlightStyle}" 
                                           Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                           BorderThickness="1" BorderBrush="{ThemeResource ControlStrokeColorSecondaryBrush}" 
                                           Margin="8,0,0,16" MinHeight="180">
                                        <StackPanel>
                                            <Grid HorizontalAlignment="Center">
                                                <Ellipse Width="70" Height="70" Fill="{ThemeResource SystemAccentColorLight3}" Opacity="0.2"/>                                               
                                                
                                                <TextBlock Text="&#xE7BA;" FontFamily="Segoe Fluent Icons" FontSize="38" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                         Margin="0" Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Grid>
                                            <TextBlock x:Uid="DotNetTitle" FontWeight="SemiBold" FontSize="18" Margin="0,12,0,8" Foreground="{ThemeResource SystemBaseHighColor}"/>
                                            <TextBlock x:Uid="DotNetDescription" 
                                                     Opacity="0.7" TextWrapping="Wrap" Margin="0,8,0,0" LineHeight="20"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- NAudio -->
                                    <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource TechHighlightStyle}" 
                                           Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                           BorderThickness="1" BorderBrush="{ThemeResource ControlStrokeColorSecondaryBrush}" 
                                           Margin="0,0,8,0" MinHeight="180">
                                        <StackPanel>
                                            <Grid HorizontalAlignment="Center">
                                                <Ellipse Width="70" Height="70" Fill="{ThemeResource SystemAccentColorLight3}" Opacity="0.2"/>                                                
                                                <TextBlock Text="&#xEF3C;" FontFamily="Segoe Fluent Icons" FontSize="38" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                         Margin="0" Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Grid>
                                            <TextBlock x:Uid="AudioProcTitle" FontWeight="SemiBold" FontSize="18" Margin="0,12,0,8" Foreground="{ThemeResource SystemBaseHighColor}"/>
                                            <TextBlock x:Uid="AudioProcDescription" 
                                                     Opacity="0.7" TextWrapping="Wrap" Margin="0,8,0,0" LineHeight="20"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Arquitetura Avançada -->
                                    <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource TechHighlightStyle}" 
                                           Background="{ThemeResource LayerFillColorDefaultBrush}"
                                           BorderThickness="1" BorderBrush="{ThemeResource ControlStrokeColorSecondaryBrush}"
                                           Margin="8,0,0,0" MinHeight="180">
                                        <StackPanel>
                                            <Grid HorizontalAlignment="Center">
                                                <Ellipse Width="70" Height="70" Fill="{ThemeResource SystemAccentColorLight3}" Opacity="0.2"/>                                                
                                                
                                                <TextBlock Text="&#xECA7;" FontFamily="Segoe Fluent Icons" FontSize="38" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                         Margin="0" Foreground="{ThemeResource SystemAccentColor}"/>
                                            </Grid>
                                            <TextBlock x:Uid="ArchTitle" FontWeight="SemiBold" FontSize="18" Foreground="{ThemeResource SystemBaseHighColor}" Margin="0,12,0,8"/>
                                            <TextBlock x:Uid="ArchDescription" 
                                                     Opacity="0.7" TextWrapping="Wrap" Margin="0,8,0,0" LineHeight="20"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Rodapé elegante -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                           CornerRadius="36" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                           Padding="32,18" Margin="0,60,0,0" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE946;" FontSize="18" Opacity="0.7" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtDireitos" x:Uid="Rights" 
                                      FontSize="13" VerticalAlignment="Center" Opacity="0.8"
                                      Style="{StaticResource CaptionTextBlockStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>