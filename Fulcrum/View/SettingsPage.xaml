<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Fulcrum.View.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fulcrum.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    mc:Ignorable="d"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <!-- Estilo para os cartões de configurações -->
        <Style x:Key="SettingsCardStyle" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.4"/>
                        <animations:TranslationAnimation From="0,-20,0" To="0,0,0" Duration="0:0:0.4"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para títulos de seção -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
        </Style>
        
        <!-- Estilo para as descrições -->
        <Style x:Key="SectionDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="{ThemeResource TextSecondaryBrush}"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="16" MaxWidth="800" HorizontalAlignment="Center">
            <TextBlock Text="Configurações" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       Margin="0,0,0,24" 
                       HorizontalAlignment="Center"/>
            
            <!-- Configurações de tema -->
            <Grid Style="{StaticResource SettingsCardStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Tema do Aplicativo" 
                           Style="{StaticResource SectionTitleStyle}"/>
                           
                <TextBlock Grid.Row="1" 
                           Text="Escolha entre o tema claro, escuro ou use as configurações do sistema."
                           Style="{StaticResource SectionDescriptionStyle}"/>
                          
                <!-- Usando apenas RadioButtons para seleção de tema -->
                <RadioButtons x:Name="ThemeRadioButtons" 
                              Grid.Row="2"
                              Margin="0,0,0,0"
                              SelectionChanged="OnThemeSelectionChanged">
                    <RadioButton Content="Tema Claro" />
                    <RadioButton Content="Tema Escuro" />
                    <RadioButton Content="Usar configuração do sistema" />
                </RadioButtons>
            </Grid>
            
            <!-- Sobre o aplicativo -->
            <Grid Style="{StaticResource SettingsCardStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Sobre o Fulcrum" 
                           Style="{StaticResource SectionTitleStyle}"/>
                           
                <TextBlock Grid.Row="1" 
                           Text="Fulcrum é um aplicativo de sons ambientes para ajudar na concentração, meditação e relaxamento. Escolha entre diversos sons da natureza e ambiente para criar o clima perfeito."
                           Style="{StaticResource SectionDescriptionStyle}"/>
                           
                <TextBlock Grid.Row="2" 
                           Text="Versão 2.0.0"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                           
                <TextBlock Grid.Row="3" 
                           x:Name="txtDireitos"
                           Text="© 2025 Éden Alencar. Todos os direitos reservados."
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextSecondaryBrush}"/>
            </Grid>
            
            <!-- Feedback -->
            <Grid Style="{StaticResource SettingsCardStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Feedback" 
                           Style="{StaticResource SectionTitleStyle}"/>
                           
                <TextBlock Grid.Row="1" 
                           Text="Seu feedback é importante para melhorarmos o aplicativo. Envie sugestões ou relate problemas."
                           Style="{StaticResource SectionDescriptionStyle}"/>
                           
                <HyperlinkButton Grid.Row="2"
                                 Content="Enviar Feedback"
                                 Click="Feedback_Click"
                                 Margin="0,8,0,0"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>

