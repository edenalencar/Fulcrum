<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Fulcrum.View.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fulcrum.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    mc:Ignorable="d"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <!-- Estilo para os cartões de configurações -->
        <Style x:Key="SettingsCardStyle" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.4"/>
                        <animations:TranslationAnimation From="0,-20,0" To="0,0,0" Duration="0:0:0.4"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para títulos de seção -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
        </Style>
        
        <!-- Estilo para as descrições -->
        <Style x:Key="SectionDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="{ThemeResource TextSecondaryBrush}"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto"
                  AutomationProperties.Name="Conteúdo da página de configurações">
        <StackPanel Orientation="Vertical" Spacing="16" MaxWidth="800" HorizontalAlignment="Center">
            <TextBlock Text="Configurações" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       Margin="0,0,0,24" 
                       HorizontalAlignment="Center"
                       AutomationProperties.HeadingLevel="Level1"/>
            
            <!-- Configurações de tema -->
            <Grid Style="{StaticResource SettingsCardStyle}"
                  AutomationProperties.Name="Configurações de tema">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Tema do Aplicativo" 
                           Style="{StaticResource SectionTitleStyle}"
                           AutomationProperties.HeadingLevel="Level2"/>
                           
                <TextBlock x:Name="txtThemeDescription" Grid.Row="1" 
                           Text="Escolha entre o tema claro, escuro ou use as configurações do sistema."
                           Style="{StaticResource SectionDescriptionStyle}"/>
                          
                <!-- Usando apenas RadioButtons para seleção de tema -->
                <RadioButtons x:Name="ThemeRadioButtons" 
                              Grid.Row="2"
                              Margin="0,0,0,0"
                              SelectionChanged="OnThemeSelectionChanged"
                              AutomationProperties.Name="Opções de tema">
                    <RadioButton Content="Tema Claro" 
                                 AutomationProperties.Name="Tema Claro"
                                 TabIndex="0"/>
                    <RadioButton Content="Tema Escuro" 
                                 AutomationProperties.Name="Tema Escuro"
                                 TabIndex="1"/>
                    <RadioButton Content="Usar configuração do sistema" 
                                 AutomationProperties.Name="Usar configuração do sistema"
                                 TabIndex="2"/>
                </RadioButtons>
            </Grid>
            
            <!-- Teclas de Atalho -->
            <InfoBar x:Name="atalhosMensagemInfo" 
                     IsOpen="False" 
                     Severity="Informational" 
                     Title="Teclas de Atalho"
                     IsClosable="True"
                     Margin="0,0,0,16"
                     AutomationProperties.Name="Mensagem sobre teclas de atalho"/>
                     
            <Grid Style="{StaticResource SettingsCardStyle}"
                  AutomationProperties.Name="Configurações de teclas de atalho">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Teclas de Atalho" 
                           Style="{StaticResource SectionTitleStyle}"
                           AutomationProperties.HeadingLevel="Level2"/>
                           
                <ToggleSwitch x:Name="toggleAtalhosGlobais" 
                              Header="Habilitar teclas de atalho globais"
                              Grid.Row="1"
                              Toggled="ToggleAtalhosGlobais_Toggled"
                              AutomationProperties.Name="Habilitar teclas de atalho globais"
                              TabIndex="3"/>
                
                <TextBlock x:Name="txtShortcutsDescription" 
                           Text="Quando habilitado, você pode controlar o Fulcrum mesmo quando ele não estiver em foco, utilizando as seguintes teclas:" 
                           TextWrapping="Wrap"
                           Grid.Row="2"
                           Margin="0,16,0,16"/>
                
                <Grid RowSpacing="8" ColumnSpacing="16" Grid.Row="3"
                      AutomationProperties.Name="Tabela de teclas de atalho">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Função" FontWeight="SemiBold" Grid.Row="0" Grid.Column="0"
                               AutomationProperties.Name="Cabeçalho: Função"/>
                    <TextBlock Text="Tecla de Atalho" FontWeight="SemiBold" Grid.Row="0" Grid.Column="1"
                               AutomationProperties.Name="Cabeçalho: Tecla de Atalho"/>
                    
                    <TextBlock Text="Reproduzir/Pausar" Grid.Row="1" Grid.Column="0"
                               AutomationProperties.Name="Função: Reproduzir/Pausar"/>
                    <TextBlock Text="Ctrl + Alt + P" Grid.Row="1" Grid.Column="1"
                               AutomationProperties.Name="Atalho: Ctrl + Alt + P"/>
                    
                    <TextBlock Text="Aumentar Volume" Grid.Row="2" Grid.Column="0"
                               AutomationProperties.Name="Função: Aumentar Volume"/>
                    <TextBlock Text="Ctrl + Alt + ↑" Grid.Row="2" Grid.Column="1"
                               AutomationProperties.Name="Atalho: Ctrl + Alt + Seta para cima"/>
                    
                    <TextBlock Text="Diminuir Volume" Grid.Row="3" Grid.Column="0"
                               AutomationProperties.Name="Função: Diminuir Volume"/>
                    <TextBlock Text="Ctrl + Alt + ↓" Grid.Row="3" Grid.Column="1"
                               AutomationProperties.Name="Atalho: Ctrl + Alt + Seta para baixo"/>
                    
                    <TextBlock Text="Mutar/Desmutar" Grid.Row="4" Grid.Column="0"
                               AutomationProperties.Name="Função: Mutar/Desmutar"/>
                    <TextBlock Text="Ctrl + Alt + M" Grid.Row="4" Grid.Column="1"
                               AutomationProperties.Name="Atalho: Ctrl + Alt + M"/>
                </Grid>
            </Grid>
            
            <!-- Configurações de tamanho de fonte -->
            <Grid Style="{StaticResource SettingsCardStyle}"
                  AutomationProperties.Name="Configurações de tamanho de fonte">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Tamanho da Fonte" 
                           Style="{StaticResource SectionTitleStyle}"
                           AutomationProperties.HeadingLevel="Level2"/>
                           
                <TextBlock Grid.Row="1" 
                           Text="Ajuste o tamanho do texto para melhorar a legibilidade."
                           Style="{StaticResource SectionDescriptionStyle}"/>
                
                <RadioButtons x:Name="FontSizeRadioButtons" 
                              Grid.Row="2"
                              Margin="0,0,0,0"
                              SelectionChanged="OnFontSizeSelectionChanged"
                              AutomationProperties.Name="Opções de tamanho de fonte">
                    <RadioButton Content="Pequeno" 
                                 AutomationProperties.Name="Fonte pequena"
                                 TabIndex="6"/>
                    <RadioButton Content="Médio (padrão)" 
                                 AutomationProperties.Name="Fonte média"
                                 TabIndex="7"/>
                    <RadioButton Content="Grande" 
                                 AutomationProperties.Name="Fonte grande"
                                 TabIndex="8"/>
                    <RadioButton Content="Extra grande" 
                                 AutomationProperties.Name="Fonte extra grande"
                                 TabIndex="9"/>
                </RadioButtons>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>

