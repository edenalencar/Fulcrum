                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Percentual de volume -->
                        <TextBlock Text="{Binding Value, ElementName=passaros, Converter={StaticResource VolumePercentageConverter}}" 
                                   Style="{StaticResource VolumeTextStyle}"/>
                        
                        <!-- Botão de equalização/efeitos -->
                        <Button Grid.Column="1" 
                                Click="BtnEqualizer_Click"
                                Tag="passaros"
                                Style="{StaticResource EqualizerButtonStyle}"
                                ToolTipService.ToolTip="Equalização e efeitos">
                            <FontIcon Glyph="&#xE9E9;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                    </Grid>
                </Grid>
                
                <!-- Cartão de Som - Praia -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Praia" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/praia.png" Width="140" Height="140" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="praiaWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="praia" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                            
                    <!-- Controles adicionais -->
                    <Grid Grid.Row="4" Margin="0,8,0,0">
