                        <TextBlock Text="{Binding Value, ElementName=ventos, Converter={StaticResource VolumePercentageConverter}}" 
                                   Style="{StaticResource VolumeTextStyle}"/>
                        
                        <!-- Botão de equalização/efeitos -->
                        <Button Grid.Column="1" 
                                Click="BtnEqualizer_Click"
                                Tag="ventos"
                                Style="{StaticResource EqualizerButtonStyle}"
                                ToolTipService.ToolTip="Equalização e efeitos">
                            <FontIcon Glyph="&#xE9E9;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                    </Grid>
                </Grid>
                
                <!-- Cartão de Som - Cafeteria -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Cafeteria" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/cafeteria.png" Width="140" Height="140" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="cafeteriaWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="cafeteria" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                            
                    <!-- Controles adicionais -->
                    <Grid Grid.Row="4" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Percentual de volume -->
                        <TextBlock Text="{Binding Value, ElementName=cafeteria, Converter={StaticResource VolumePercentageConverter}}" 
                                   Style="{StaticResource VolumeTextStyle}"/>
                        
                        <!-- Botão de equalização/efeitos -->
                        <Button Grid.Column="1" 
                                Click="BtnEqualizer_Click"
                                Tag="cafeteria"
                                Style="{StaticResource EqualizerButtonStyle}"
                                ToolTipService.ToolTip="Equalização e efeitos">
                            <FontIcon Glyph="&#xE9E9;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                    </Grid>
                </Grid>
                
                <!-- Cartão de Som - Lancha -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Lancha" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/lancha.png" Width="140" Height="140" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="lanchaWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="lancha" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                            
                    <!-- Controles adicionais -->
                    <Grid Grid.Row="4" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Percentual de volume -->
                        <TextBlock Text="{Binding Value, ElementName=lancha, Converter={StaticResource VolumePercentageConverter}}" 
                                   Style="{StaticResource VolumeTextStyle}"/>
                        
                        <!-- Botão de equalização/efeitos -->
                        <Button Grid.Column="1" 
                                Click="BtnEqualizer_Click"
                                Tag="lancha"
                                Style="{StaticResource EqualizerButtonStyle}"
                                ToolTipService.ToolTip="Equalização e efeitos">
                            <FontIcon Glyph="&#xE9E9;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                    </Grid>
                </Grid>
            </controls:UniformGrid>
            
            <!-- Botões de controle -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,12" Spacing="16">
                <Button x:Name="PlayButton" 
                        Click="Play_Click" 
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="16,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE768;" FontFamily="Segoe MDL2 Assets"/>
                        <TextBlock Text="Reproduzir Todos" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="PauseButton"
                        Click="Pause_Click"
                        Padding="16,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE769;" FontFamily="Segoe MDL2 Assets"/>
                        <TextBlock Text="Pausar Todos" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
