                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Percentual de volume -->
                        <TextBlock Text="{Binding Value, ElementName=praia, Converter={StaticResource VolumePercentageConverter}}" 
                                   Style="{StaticResource VolumeTextStyle}"/>
                        
                        <!-- Botão de equalização/efeitos -->
                        <Button Grid.Column="1" 
                                Click="BtnEqualizer_Click"
                                Tag="praia"
                                Style="{StaticResource EqualizerButtonStyle}"
                                ToolTipService.ToolTip="Equalização e efeitos">
                            <FontIcon Glyph="&#xE9E9;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                    </Grid>
                </Grid>
                
                <!-- Cartão de Som - Trem -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Trem" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/trem.png" Width="140" Height="140" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="tremWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="trem" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                            
                    <!-- Controles adicionais -->
                    <Grid Grid.Row="4" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
