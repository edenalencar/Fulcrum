<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Fulcrum.View.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fulcrum.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    mc:Ignorable="d"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <!-- Estilo para os cartões de som -->
        <Style x:Key="SoundCardStyle" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.3"/>
                        <animations:ScaleAnimation From="0.9" To="1" Duration="0:0:0.3"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para os títulos dos cartões -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
        </Style>
        
        <!-- Estilo para os controles deslizantes -->
        <Style x:Key="VolumeSliderStyle" TargetType="Slider">
            <Setter Property="Margin" Value="0,16,0,0"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="StepFrequency" Value="0.01"/>
            <Setter Property="TickFrequency" Value="0.1"/>
            <Setter Property="TickPlacement" Value="Outside"/>
            <Setter Property="IsThumbToolTipEnabled" Value="True"/>
            <Setter Property="ThumbToolTipValueConverter">
                <Setter.Value>
                    <local:VolumePercentageConverter/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{ThemeResource SystemAccentColor}"/>
        </Style>

        <!-- Estilo para os visualizadores de onda -->
        <Style x:Key="WaveformStyle" TargetType="Polyline">
            <Setter Property="Stroke" Value="{ThemeResource SystemAccentColor}"/>
            <Setter Property="StrokeThickness" Value="1.5"/>
            <Setter Property="StrokeLineJoin" Value="Round"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Estilo para o botão de cancelar timer -->
        <Style x:Key="TimerCancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Opacity" Value="0.8"/>
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.2"/>
                        <animations:ScaleAnimation From="0.8" To="1" Duration="0:0:0.2"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
            <Setter Property="animations:Implicit.HideAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="1" To="0" Duration="0:0:0.2"/>
                        <animations:ScaleAnimation From="1" To="0.8" Duration="0:0:0.2"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card para um som com controles -->
        <DataTemplate x:Key="SoundCardTemplate">
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Título e ícone -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <FontIcon Glyph="{Binding Glyph}" 
                                    FontFamily="Segoe Fluent Icons" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"
                                    FontSize="16"
                                    Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Title}" 
                                    Style="{StaticResource CardTitleStyle}"/>
                    </StackPanel>
                    
                    <!-- Visualizador de forma de onda -->
                    <Border Grid.Row="1" 
                            Style="{StaticResource WaveformBorderStyle}">
                        <Polyline x:Name="polyWaveform"
                                Style="{StaticResource WaveformStyle}"
                                Points="{Binding WaveformPoints}"/>
                    </Border>
                    
                    <!-- Slider de volume -->
                    <Slider Grid.Row="2" 
                            Style="{StaticResource VolumeSliderStyle}"
                            Value="{Binding Volume, Mode=TwoWay}"
                            ValueChanged="Volume_ValueChanged"/>

                    <!-- Botões de controle -->
                    <Grid Grid.Row="3" Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Botão de reprodução -->
                        <Button x:Name="btnPlay"
                                Style="{StaticResource DefaultButtonStyle}"
                                Click="PlayButton_Click"
                                ToolTipService.ToolTip="Reproduzir/Pausar">
                            <FontIcon Glyph="&#xE768;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="rootPanel" Orientation="Vertical" Spacing="16" MaxWidth="800" HorizontalAlignment="Center">
            <TextBlock Text="Sons Ambientes" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>
            
            <!-- Timer de Sono -->
            <Grid Margin="0,0,0,24" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="SetSleepTimerButton" 
                        Grid.Column="0"
                        Click="SetSleepTimer_Click"
                        HorizontalAlignment="Left"
                        Style="{StaticResource DefaultButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE916;" FontFamily="Segoe MDL2 Assets"/>
                        <TextBlock Text="Definir Timer" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <StackPanel x:Name="timerContainer" 
                            Grid.Column="1"
                            Orientation="Horizontal" 
                            Visibility="Collapsed" 
                            Spacing="8"
                            Background="{ThemeResource SystemAccentColorLight1}"
                            CornerRadius="16"
                            Padding="10,4,4,4"
                            VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE916;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                    <TextBlock x:Name="timerDisplay" 
                               Text="00:00" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                    <Button x:Name="cancelTimerButton" 
                            Style="{StaticResource TimerCancelButtonStyle}"
                            Click="CancelTimer_Click">
                        <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </Button>
                </StackPanel>
            </Grid>

            <controls:UniformGrid Columns="3" Rows="0" ColumnSpacing="16" RowSpacing="16">
                <!-- Cartão de Som - Chuva -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Chuva" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/chuva.png" Width="140" Height="140" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="chuvaWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="chuva" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                            
                    <!-- Controles adicionais -->
                    <Grid Grid.Row="4" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Percentual de volume -->
                        <TextBlock Text="{Binding Value, ElementName=chuva, Converter={StaticResource VolumePercentageConverter}}" 
                                   Style="{StaticResource VolumeTextStyle}"/>
                        
                        <!-- Botão de equalização/efeitos -->
                        <Button Grid.Column="1" 
                                Click="BtnEqualizer_Click"
                                Tag="chuva"
                                Style="{StaticResource EqualizerButtonStyle}"
                                ToolTipService.ToolTip="Equalização e efeitos">
                            <FontIcon Glyph="&#xE9E9;" FontFamily="Segoe MDL2 Assets"/>
                        </Button>
                    </Grid>
                </Grid>
                
                <!-- Cartão de Som - Fogueira -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Fogueira" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/fogueira.png" Width="140" Height="140" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="fogueiraWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="fogueira" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                            
                    <!-- Controles adicionais -->
                    <Grid Grid.Row="4" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Percentual de volume -->
                        <TextBlock Text="{Binding Value, ElementName=fogueira, Converter={StaticResource VolumePercentageConverter}}" 
