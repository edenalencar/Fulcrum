<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Fulcrum.View.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fulcrum.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    mc:Ignorable="d"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <!-- Estilo para os cartões de som -->
        <Style x:Key="SoundCardStyle" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="animations:Implicit.ShowAnimations">
                <Setter.Value>
                    <animations:ImplicitAnimationSet>
                        <animations:OpacityAnimation From="0" To="1" Duration="0:0:0.3"/>
                        <animations:ScaleAnimation From="0.9" To="1" Duration="0:0:0.3"/>
                    </animations:ImplicitAnimationSet>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para os títulos dos cartões -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
        </Style>
        
        <!-- Estilo para os controles deslizantes -->
        <Style x:Key="VolumeSliderStyle" TargetType="Slider">
            <Setter Property="Margin" Value="0,16,0,0"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="StepFrequency" Value="0.01"/>
            <Setter Property="TickFrequency" Value="0.1"/>
            <Setter Property="TickPlacement" Value="Outside"/>
            <Setter Property="IsThumbToolTipEnabled" Value="True"/>
        </Style>

        <!-- Estilo para os visualizadores de onda -->
        <Style x:Key="WaveformStyle" TargetType="Polyline">
            <Setter Property="Stroke" Value="{ThemeResource SystemAccentColor}"/>
            <Setter Property="StrokeThickness" Value="1.5"/>
            <Setter Property="StrokeLineJoin" Value="Round"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="16" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="12">
            <TextBlock Text="Sons Ambientes" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>
            
            <controls:UniformGrid Columns="2" Rows="0" HorizontalAlignment="Stretch">
                <!-- Cartão de Som - Chuva -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Chuva" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/chuva.png" Width="120" Height="120" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="chuvaWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="chuva" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                </Grid>
                
                <!-- Cartão de Som - Fogueira -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Fogueira" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/fogueira.png" Width="120" Height="120" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="fogueiraWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="fogueira" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                </Grid>
                
                <!-- Cartão de Som - Ondas -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Ondas" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/ondas.png" Width="120" Height="120" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="ondasWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="ondas" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                </Grid>
                
                <!-- Cartão de Som - Pássaros -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Pássaros" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/passaros.png" Width="120" Height="120" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="passarosWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="passaros" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                </Grid>
                
                <!-- Cartão de Som - Praia -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Praia" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/praia.png" Width="120" Height="120" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="praiaWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="praia" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                </Grid>
                
                <!-- Cartão de Som - Trem -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Trem" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/trem.png" Width="120" Height="120" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="tremWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="trem" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                </Grid>
                
                <!-- Cartão de Som - Ventos -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Ventos" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/vento.png" Width="120" Height="120" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="ventosWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="ventos" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                </Grid>
                
                <!-- Cartão de Som - Cafeteria -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Cafeteria" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/cafeteria.png" Width="120" Height="120" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="cafeteriaWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="cafeteria" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                </Grid>
                
                <!-- Cartão de Som - Lancha -->
                <Grid Style="{StaticResource SoundCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Lancha" Style="{StaticResource CardTitleStyle}"/>
                    
                    <Image Grid.Row="1" Source="/Assets/Images/lancha.png" Width="120" Height="120" 
                           HorizontalAlignment="Center" Margin="0,8"/>
                    
                    <Polyline x:Name="lanchaWaveform" Grid.Row="2" Style="{StaticResource WaveformStyle}"/>
                    
                    <Slider x:Name="lancha" Grid.Row="3" Style="{StaticResource VolumeSliderStyle}"
                            ValueChanged="Slider_ValueChanged"/>
                </Grid>
            </controls:UniformGrid>
            
            <!-- Botões de controle -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,12" Spacing="16">
                <Button x:Name="PlayButton" Content="Reproduzir Todos" 
                        Click="Play_Click" 
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="16,8"/>
                
                <Button x:Name="PauseButton" Content="Pausar Todos" 
                        Click="Pause_Click"
                        Padding="16,8"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
